<p id="notice"><%= notice %></p>

<h1>Books</h1>
<h1>This is a test version</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
      
      <th>Author</th>
      <th colspan="1"></th>
      
      <th>Price</th>
      <th colspan="3"></th>
      
      <th>Date</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td colspan="4"><%= book.author %></td>
        <td colspan="4"><%= book.price %></td>
        <td colspan="5"><%= book.publishedDate %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

